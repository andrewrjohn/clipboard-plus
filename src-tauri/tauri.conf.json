{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clipboard+",
  "version": "0.1.0",
  "identifier": "com.ajohnson.clipboard-plus",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Clipboard+",
        "resizable": false,
        "width": 650,
        "height": 400,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["icons/tray-icon.png"]
  }
}
